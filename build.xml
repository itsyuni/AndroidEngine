    <target name="clean" description="clean up">
        <delete dir="${build}"/>
    </target>

    <target name="copy-jre">
        <mkdir dir="${dist}/jre" />
        <copy todir="${dist}/jre" >
            <fileset dir="${jre.dir}" includes="**"/>
        </copy>
    </target>

    <target name="launch4j">
        <launch4j>
            <config headerType="gui" outfile="${dist}/AndroidEngine.exe"
                    dontWrapJar="false" jarPath="${dist}/AndroidEngine.jar" chdir="."
                    downloadUrl="http://java.com/download" icon="C:\Users\EF9B~1\AppData\Local\Temp\10aa7cca-888f-4258-ab33-66e7d98d93fd2296428899193253027.ico">
                <classPath mainClass="php.runtime.launcher.Launcher">
                    <cp>lib/*</cp>
                </classPath>
                <jre minVersion="1.8.0" path="jre" runtimeBits="64/32">
                    <opt>-Dfile.encoding=UTF-8</opt>
                </jre>
